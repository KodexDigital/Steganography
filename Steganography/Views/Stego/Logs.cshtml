@model string[]
@{
    ViewData["Title"] = "My Logs";
}

<div class="container mt-4">
    <h3 class="mb-4">📄 My Steganography Activity Logs</h3>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no recorded actions yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var log in Model)
            {
                <div class="list-group-item small text-monospace">
                    @log
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="Stats" class="btn btn-outline-primary">📊 View My Stats</a>
        <a href="/" class="btn btn-outline-secondary">⬅ Back to Home</a>
    </div>
</div>