@model Steganography.ViewModels.EmailViewModel 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Subject</title>
    <link rel="icon" type="image/x-icon" href="~/icons/stegtool.ico" />
    <link rel="apple-touch-icon" href="~/icons/stegtool.jpg">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="margin:0; padding:0; font-family:'Segoe UI', sans-serif; background-color:#f4f4f4;">
    <table width="100%" cellpadding="0" cellspacing="0" style="background-color:#f4f4f4; padding: 40px 0;">
        <tr>
            <td align="center">
                <table width="600" cellpadding="0" cellspacing="0" style="background-color:#ffffff; border-radius:8px; overflow:hidden; box-shadow:0 2px 8px rgba(0,0,0,0.1);">
                    <tr>
                        <td style="background-color:#0d6efd; padding: 20px; color:#ffffff; text-align:center;">
                            <h2 style="margin:0;">SecureSteg</h2>
                            <p style="margin:0; font-size: 14px;">Secure Image Messaging Tool</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 30px;">
                            <h3 style="margin-top:0;">@Model.Title</h3>
                            <p style="font-size: 16px; line-height: 1.5; color:#333333;">
                                @Html.Raw(Model.BodyContent)
                            </p>
                            @if (!string.IsNullOrWhiteSpace(Model.ActionUrl))
                            {
                                <div style="margin-top: 30px; text-align: center;">
                                    <a href="@Model.ActionUrl"
                                       style="background-color:#0d6efd; color:#ffffff; padding: 12px 24px; text-decoration: none; border-radius: 4px; font-weight: bold;">
                                        @Model.ActionText
                                    </a>
                                </div>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px; text-align: center; font-size: 12px; color:#999999;">
                            Copyright &copy; @DateTime.Now.Year | <a href="https://prismdigitalco.com/" target="_blank">Prism Digital Company</a>. All rights reserved.<br />
                            <a href="https://securesteg.app/home/privacy" class="me-3" target="_blank" style="color:#999999; text-decoration:underline;">Privacy Policy</a>
                            <a href="https://securesteg.app/home/terms" class="me-3" target="_blank" style="color:#999999; text-decoration:underline;">Terms of Service</a>
                            <a href="https://securesteg.app/home/cookies" target="_blank" style="color:#999999; text-decoration:underline;">Cookie Policy</a>
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
    </table>
</body>
</html>